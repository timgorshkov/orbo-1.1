{
  "buildCommand": "next build",
  "ignoreCommand": "false",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["fra1"],
  "headers": [
    {
      "source": "/api/telegram/webhook",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    },
    {
      "source": "/api/events/checkin",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/sync-users",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/event-notifications",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/check-webhook",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/telegram-health-check",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/update-participant-roles",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/send-weekly-digests",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/send-event-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/sync-admin-rights",
      "schedule": "0 */6 * * *"
    }
  ],
  "rewrites": [
    { "source": "/healthz", "destination": "/api/health" }
  ]
}
